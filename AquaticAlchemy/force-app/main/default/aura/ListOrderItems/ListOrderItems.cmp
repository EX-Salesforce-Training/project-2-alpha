<aura:component controller="ApexGetOrderItems" access="global">
    <aura:attribute name="items" type="OrderItem[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.myAction}"/>
    <aura:iteration items="{!v.items}" var="item">
    	<lightning:recordViewForm recordId="{!item.Id}" objectApiName="OrderItem">
                <lightning:outputField fieldName="Product2Id" class="field"/>
   		</lightning:recordViewForm>
	</aura:iteration>
             
	
</aura:component>